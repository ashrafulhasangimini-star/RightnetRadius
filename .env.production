# Production Environment Configuration
# Copy this to .env and update with your production values

# Application
APP_NAME=RightnetRadius
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_URL=https://admin.rightnet.local

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=rightnet_radius
DB_USERNAME=radius_user
DB_PASSWORD=SECURE_PASSWORD_HERE

# HTTPS/TLS Configuration
ENFORCE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/rightnet.crt
SSL_KEY_PATH=/etc/ssl/private/rightnet.key
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false
SECURE_COOKIES=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Security
SECURITY_JWT_SECRET=GENERATE_SECURE_RANDOM_STRING_HERE
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION=3600
SECURITY_JWT_REFRESH_EXPIRATION=604800

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_DECAY=1

# Two Factor Authentication
TWO_FACTOR_ENABLED=true

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Broadcasting
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=APP_ID_HERE
PUSHER_APP_KEY=PUSHER_KEY_HERE
PUSHER_APP_SECRET=PUSHER_SECRET_HERE
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=localhost
PUSHER_PORT=6001
PUSHER_SCHEME=http
VITE_PUSHER_APP_KEY=PUSHER_KEY_HERE
VITE_PUSHER_APP_CLUSTER=mt1

# RADIUS Configuration
RADIUS_SECRET=GENERATE_SHARED_SECRET_HERE
RADIUS_PORT=1812
RADIUS_ACCOUNTING_PORT=1813
RADIUS_NAS_IP=192.168.1.1
RADIUS_TIMEOUT=3
RADIUS_RETRIES=3

# MikroTik Configuration
MIKROTIK_HOST=192.168.1.10
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=ROUTER_PASSWORD_HERE
MIKROTIK_PORT=8728
MIKROTIK_TIMEOUT=10

# ISP Configuration
ISP_NAME="RightNet Communications"
ISP_TIMEZONE="Asia/Dhaka"
ISP_CURRENCY="BDT"
ISP_TAX_PERCENTAGE=0

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=YOUR_APP_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@rightnet.local
MAIL_FROM_NAME="RightNet Radius"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_PATH=/var/log/rightnet/

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_EXPORT_FORMAT=csv

# Sentry Error Tracking (Optional)
SENTRY_LARAVEL_DSN=https://YOUR_SENTRY_KEY@sentry.io/PROJECT_ID

# API Documentation
SCRIBE_ENABLED=false

# Security Headers
CORS_ALLOWED_ORIGINS="https://admin.rightnet.local,https://portal.rightnet.local"

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS="admin.rightnet.local,portal.rightnet.local"

# Telescope (Debugging - disable in production)
TELESCOPE_ENABLED=false
